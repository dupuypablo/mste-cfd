%define new figure environment
   \newcommand{\figwidth}{1.0\linewidth}
   \newcommand{\InsFig}[3]{
     \begin{figure}[!hb]
       \centering
       \includegraphics[width=\figwidth]{#1}
       \caption{#2}
       \label{fig:#3}
     \end{figure}
   }
   \newcommand{\InsFigRot}[3]{
     \begin{figure}[!hb]
       \centering
       \includegraphics[height=\figwidth, angle=-90]{#1}
       \caption{#2}
       \label{fig:#3}
     \end{figure}
   }

